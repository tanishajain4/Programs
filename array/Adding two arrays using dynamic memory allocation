#include <stdio.h>
#include <stdlib.h>
void main()
{   int i,n;
    int *a,*b;
    printf("Enter the number of elements in array:");
    scanf("%d",&n);
    a=(int *) malloc (n*sizeof(int));
    b=(int *) malloc (n*sizeof(int));
    printf("Enter the first array:");
    for(i=0;i<n;i++)
    scanf("%d",a+i);
     printf("Enter the second array:");
    for(i=0;i<n;i++)
    scanf("%d",b+i);
    printf("The resultant array is:");
    for(i=0;i<n;i++)
    printf("%d ",*(a+i)+*(b+i));

    
}
