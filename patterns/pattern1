#include <iostream>
using namespace std;
int main()
{
    int rows,i,j;
    cout<<"Enter the number of rows: ";
    cin>>rows;
    for(i=1;i<=rows;i++)
    {for(j=1;j<i;j++)
      cout<<i<<"*";
      cout<<i<<"\n";
    }
    for(i=rows;i>0;i--)
    {for(j=1;j<i;j++)
      cout<<i<<"*";
      cout<<i<<"\n";
    }
    return 0;
}
