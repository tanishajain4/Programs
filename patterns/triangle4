#include <iostream>
using namespace std;
int main()
{
    int rows,i,j,k=1,l;
    cout<<"Enter the number of rows:";
    cin>>rows;
    for(i=1;i<=rows;i++)
    {
        for(j=1;j<=i;j++)
      {
          cout<<k;
          k++;
      }
      l=k-2;
        for(j=1;j<i;j++)
        { 
            cout<<l;
            l--;
         
        }
      
        
      k=k++;
      cout<<"\n";
    }
    return 0;
}
