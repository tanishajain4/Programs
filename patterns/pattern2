#include <iostream>
using namespace std;
int main()
{
    int rows,i,j;
    cout<<"Enter the no of rows:";
    cin>>rows;
    for(i=1;i<=rows;i++)
    {for(j=1;j<=i;j++)
      cout<<j;
     for(j=1;j<=(2*rows-2*i);j++)
       cout<<" ";
     for(j=i;j>=1;j--)
      cout<<j;
      cout<<"\n";
    }

    return 0;
}
