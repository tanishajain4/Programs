#include<iostream>
using namespace std;
int main()
{int i,j,s=1,rows;
cout<<"Enter the number fo rows:";
cin>>rows;
for(i=0;i<=rows/2;i++)
{for(j=i+1;j<=rows/2;j++)
  cout<<" ";
  for(j=1;j<=s;j++)
  cout<<"*";
  s=s+2;
  cout<<"\n";
} s=s-4;
for(i=0;i<rows/2;i++)
{for(j=0;j<=i;j++)
cout<<" ";
for(j=1;j<=s;j++)
cout<<"*";
cout<<"\n";
s=s-2;
}
return 0;
}
