#include <iostream>
using namespace std;
int main()
{
    int rows,i,j;
    cout<<"Enter the number of rows:";
    cin>>rows;
    for(i=rows;i>=1;i--)
    {int k=i;
      for(j=1;j<=rows;j++)
      {
         if(k<rows)
         cout<<k;
         else
         cout<<rows;
         k++;
      }
        
        cout<<"\n";
    }

    return 0;
}
